<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="View">
        <attr name="attribute" format="string"/>
        <attr name="highlighted" format="boolean"/>
        <attr name="highlightColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="SearchBox">
        <attr name="autofocus" format="boolean"/>
        <attr name="submitButtonEnabled" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="Hits">
        <attr name="infiniteScroll" format="boolean"/>
        <attr name="hitsPerPage" format="integer"/>
        <attr name="itemLayout" format="reference"/>
        <attr name="remainingItemsBeforeLoading" format="integer"/>
    </declare-styleable>
    <declare-styleable name="RefinementList">
        <attr name="operator" format="string">
            <enum name="or" value="0"/>
            <enum name="and" value="1"/>
        </attr>
        <attr name="sortBy" format="string"/>
        <attr name="limit" format="integer"/>
    </declare-styleable>
    <declare-styleable name="Stats">
        <attr name="resultTemplate" format="string"/>
        <attr name="errorTemplate" format="string"/>
    </declare-styleable>
</resources>